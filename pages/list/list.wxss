.page{
  position: relative;
}
.lists{
  position: absolute;
  width: 100%;
  height: 100%;
  left:0;
  top:0;
}
.list-i{
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #EFF3F5;
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
}
.content{
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #999;
  padding: 0 20rpx;
  color: #333;
}
icon{
  position: absolute;
  top:30rpx;
  right:40rpx;
}
.time{
  line-height: 80rpx;
  padding: 0 20rpx;
  color: #999;
  font-size: 24rpx;
}
button{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  border-radius: 50rpx;
  background: #47C13C;
  color: #fff;
  
}